{
  "name": "rock-coffee-bot",
  "version": "1.0.0",
  "description": "Rock Coffee Loyalty Bot System",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node --transpile-only src/index.ts",
    "dev:js": "node scripts/run-js.js",
    "build": "tsc --skipLibCheck",
    "migrate": "ts-node --transpile-only scripts/migrate.ts",
    "quick-start": "ts-node --transpile-only --ignore-diagnostics src/index.ts",
    "test": "jest --detectOpenHandles --forceExit",
    "test:watch": "jest --watch --detectOpenHandles",
    "test:coverage": "jest --coverage --detectOpenHandles --forceExit",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "telegram",
    "bot",
    "loyalty",
    "coffee",
    "typescript"
  ],
  "author": "Rock Coffee Team",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "node-telegram-bot-api": "^0.64.0",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.8.0",
    "@types/node-telegram-bot-api": "^0.64.0",
    "@types/pg": "^8.6.6",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
